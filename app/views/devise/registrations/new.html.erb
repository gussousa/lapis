<h2>Cadastre-se</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: "Nome",
                required: true,
                autofocus: true %>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password, label: "Senha",
                required: true,
                hint: ("#{@minimum_password_length} caracteres no mÃ­nimo" if @minimum_password_length),
                input_html: { autocomplete: "nova-senha" } %>
    <%= f.input :password_confirmation, label: "Confirme sua senha",
                required: true,
                input_html: { autocomplete: "nova-senha" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Confirmar cadastro" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
